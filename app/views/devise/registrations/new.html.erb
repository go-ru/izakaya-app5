<header>
  <div class="header-wrapper-signup">
    <%= link_to "IZAKAYA", root_path, class: "header-logo signup-header" %>
  </div>
</header>

<div class="form-wrapper">
<div class="form-box">
<h2>新規登録</h2>
<p>※一般ユーザーは登録することができません</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="signup-name">店名</div>
    <%= f.text_field :store_name, autofocus: true, autocomplete: "store_name", class: 'signup-form' %>
  </div>

  <div class="field">
    <div class="signup-name">メールアドレス</div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'signup-form'  %>
  </div>

  <div class="field">
    <div class="signup-name"> パスワード</div>
    <%= f.password_field :password, autocomplete: "new-password", class: 'signup-form'  %>
  </div>

  <div class="field">
    
    <div class="signup-name">パスワード確認</div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'signup-form' %>
  </div>

  <div class="actions">
    <%= f.submit "登録" , class:'signup-submit'%>
  </div>
<% end %>
</div>
</div>

<footer>
&copy; 2020 izakaya.com
</footer>
