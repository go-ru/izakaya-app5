<%= render "header" %>
<div class="center">
  

  <div class="search-box">
    <%= form_with(url: search_stores_path, local: true, method: :get, class: "search-form") do |f| %>
      <%= f.text_field :keyword, placeholder: "お店を検索する", class: "search-input" %>
      <%= f.submit "検索", class: "search-btn" %>
    <% end %>
  </div>

  <div class="center-wrapper">
    <% @users.each do |user| %>
      <%# <% if store.present? %> 
        <div class="store-box">
          <div class="store-image">
            <%= link_to store_path(user.id) do  %> 
              <%= image_tag user.store.image , class: "store-image" %> 
            <% end %>
          </div>
          <div class="store-infos">
            <div class="name-store">
              <%= user.store_name %>
            </div>
            <ul>
              <li class="store-info">カテゴリー：
                <%= user.store.genre %> 
              </li>
              <li class="store-info">営業時間：
                <%= user.store.hour %> 
              </li>
              <li class="store-info">予算：
                <%= user.store.budget %>  
              </li>
            </ul>
          </div>
        </div>
      <%# <% end %> 
  <% end %> 

  </div>
</div>

<footer>
&copy; 2020 izakaya.com
</footer>